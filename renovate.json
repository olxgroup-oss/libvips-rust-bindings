{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(ci)",
    ":semanticCommitScope(package)"
  ],
  "assignees": [
    "@bassco"
  ],
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "dependencyDashboard": true,
  "configMigration": true,
  "commitMessageLowerCase": "auto",
  "timezone": "Europe/Berlin",
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseStalePrs": true,
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "commitMessageTopic": "dependency {{depName}}",
    "commitMessageExtra": null,
    "schedule": [
      "before 4am on monday"
    ],
    "groupName": null,
    "prBodyDefinitions": {
      "Change": "All locks refreshed"
    }
  },
  "packageRules": [   
    {
      "description": "Automatically merge minor and patch-level updates without creating a PR",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Causes the bot to create a PR (and thus, an email notification), whenever there is a new major version",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "prCreation": "not-pending"
    },
    {
      "description": "Take special care of the generator cargo configuration with a PR",
      "matchFileNames": ["generator/Cargo.toml"],
      "automerge": false,
      "prCreation": "not-pending",
      "commitMessagePrefix": "fix",
      "commitMessage": "{{{commitMessagePrefix}}}: {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}"
    },
    {
      "matchManagers": ["github-actions"],
      "commitMessagePrefix": "build",
      "commitMessageTopic": "workflows",
      "commitMessage": "{{{commitMessagePrefix}}}: {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["dockerfile"],
      "commitMessagePrefix": "build",
      "commitMessageTopic": "docker",
      "commitMessage": "{{{commitMessagePrefix}}}: {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
      "automerge": false
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3
}